# Manifest Service Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_API_URL=https://api.github.com

# Security
MANIFEST_SECRET=your_manifest_secret_key
JWT_SECRET=your_jwt_secret_key

# Database Configuration
DATABASE_URL=postgresql://manifest_user:manifest_password@manifest-postgres:5432/manifest
POSTGRES_HOST=manifest-postgres
POSTGRES_PORT=5432
POSTGRES_DB=manifest
POSTGRES_USER=manifest_user
POSTGRES_PASSWORD=manifest_password

# Redis Configuration
REDIS_URL=redis://manifest-redis:6379
REDIS_HOST=manifest-redis
REDIS_PORT=6379

# External Services
DOCKER_API_VERSION=1.41
DOCKER_SOCKET=/var/run/docker.sock

# Logging
LOG_FILE_PATH=./logs/manifest.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Update Checking
UPDATE_CHECK_INTERVAL=3600000
SECURITY_UPDATE_CHECK_INTERVAL=1800000

# Documentation
DOCS_TEMPLATE_PATH=./config/templates
DOCS_OUTPUT_PATH=./data/docs
